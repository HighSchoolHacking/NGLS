{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./lib",
        "pretty": true,
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ]
}
